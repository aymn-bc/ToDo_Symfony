{% extends 'base.html.twig' %}

{% block title %}Index Page{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Hello BOSS! âœ…</h1>
    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <th>#</th>
            <th>Titre</th>
            <th>Terminee</th>
            <th>Description</th>
        </thead>
        <tbody>
            {% if taches %}
                {% for tache in taches %}
                    <tr {% if tache.terminee %} style="text-decoration: line-through" {% endif %}>
                        <td>{{loop.index}}</td>
                        <td>{{tache.titre}}</td>
                        <td>{{tache.terminee ? 'true' : 'false'}}</td>
                        <td>{{tache.description}}</td>
                    <tr>
                {% endfor %}
            {% else %}
                empty
            {% endif %}
        </tbody>

    </table>
</div>
{% endblock %}
